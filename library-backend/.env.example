# Copy this file to .env and fill the values before running the server
# MongoDB connection string (MongoDB Atlas or local). Example for Atlas:
# MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net
MONGODB_URI=

# Admin credentials used by the simple admin login endpoint
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# JWT secret used to sign admin tokens
JWT_SECRET=your_jwt_secret_here

# ImageKit keys (optional). If you don't plan to use ImageKit, you can leave them empty, but image uploads will fail.
IMAGEKIT_PUBLIC_KEY=
IMAGEKIT_PRIVATE_KEY=
IMAGEKIT_URL_ENDPOINT=

# Optional: set a PORT if you don't want to use the default 3000
PORT=3000
